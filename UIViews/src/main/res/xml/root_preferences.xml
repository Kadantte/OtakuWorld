<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Account">

        <Preference
            app:key="user_account"
            app:title="User" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="aboutCategory"
        app:title="About">

        <Preference
            app:key="about_version"
            app:title="Version: " />

        <Preference
            app:key="updateAvailable"
            app:title="Update Available" />

        <Preference
            app:enabled="true"
            app:key="sync_time"
            app:title="Last Time Updates Were Checked" />

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="Check for Updates Periodically" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="viewCategory"
        app:title="View">

        <Preference
            app:icon="@drawable/ic_baseline_star_24"
            app:key="view_favorites"
            app:title="View Favorites" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="generalCategory"
        app:title="General">

        <Preference
            app:icon="@android:drawable/ic_menu_preferences"
            app:key="current_source"
            app:title="Current Source: " />

        <Preference
            app:icon="@drawable/ic_baseline_open_in_browser_24"
            app:key="view_source"
            app:title="View Source in Browser" />

        <ListPreference
            app:defaultValue="system"
            app:dialogIcon="@drawable/ic_baseline_settings_brightness_24"
            app:dialogTitle="Choose a Theme"
            app:entries="@array/theme_items"
            app:entryValues="@array/theme_values"
            app:icon="@drawable/ic_baseline_settings_brightness_24"
            app:key="theme_setting"
            app:persistent="true"
            app:title="Theme"
            app:useSimpleSummaryProvider="true" />

        <SeekBarPreference
            app:icon="@drawable/ic_baseline_battery_alert_24"
            app:key="battery_alert"
            app:min="1"
            app:seekBarIncrement="1"
            app:title="Battery Alert Percentage" />

    </PreferenceCategory>

</PreferenceScreen>