<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="info"
            type="com.programmersbox.models.InfoModel" />

        <variable
            name="swatch"
            type="com.programmersbox.models.SwatchInfo" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/infoFullLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/details_fragment_xml_infofulllayout_scene"
        tools:context=".DetailsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@id/optionsBar"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/infoCover"
                android:layout_width="360px"
                android:layout_height="480px"
                android:layout_margin="5dp"
                app:coverImage="@{info.imageUrl}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription,PxUsage"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                app:layout_constraintBottom_toBottomOf="@id/descriptionLayout"
                android:id="@+id/moreInfoLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@id/infoCover"
                app:layout_constraintStart_toStartOf="@id/infoCover"
                app:layout_constraintTop_toBottomOf="@id/infoCover">

                <TextView
                    android:id="@+id/infoUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:text="@{info.url}"
                    app:linkColor="@{swatch}"
                    tools:text="@tools:sample/cities"
                    tools:textColorLink="@sample/sample_colors" />

                <TextView
                    android:id="@+id/alternateNames"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bodyColor="@{swatch}"
                    app:otherNames="@{info.alternativeNames}"
                    tools:text="@tools:sample/full_names"
                    tools:textColor="@sample/sample_colors" />

            </LinearLayout>

            <TextView
                android:id="@+id/infoTitle"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:freezesText="true"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@{info.title}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/infoCover"
                app:layout_constraintTop_toTopOf="@id/infoCover"
                app:titleColor="@{swatch}"
                tools:text="@tools:sample/full_names"
                tools:textColor="@sample/sample_colors" />

            <HorizontalScrollView
                android:id="@+id/genreListLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/infoCover"
                app:layout_constraintTop_toBottomOf="@id/infoTitle">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/genreList"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:genreList="@{info.genres}"
                    app:singleLine="true"
                    app:swatch="@{swatch}">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:chipBackgroundColor="@sample/sample_colors"
                        tools:text="Comedy"
                        tools:textColor="@sample/sample_colors"
                        tools:visibility="visible" />

                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>

            <ScrollView
                android:id="@+id/descriptionLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/infoCover"
                app:layout_constraintTop_toBottomOf="@id/genreListLayout">

                <TextView
                    android:id="@+id/infoDescription"
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{info.description}"
                    app:bodyColor="@{swatch}"
                    tools:text="@tools:sample/lorem/random"
                    tools:textColor="@sample/sample_colors" />

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/optionsBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoLayout"
            android:layout_marginHorizontal="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/chapterListLayout"
            app:layout_constraintTop_toBottomOf="@id/infoLayout">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/favoriteItem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/heart"
                app:tint="#ffffff" />

            <TextView
                android:id="@+id/favoriteInfo"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:minLines="2"
                app:layout_constraintBottom_toBottomOf="@id/favoriteItem"
                app:layout_constraintEnd_toStartOf="@id/markChapters"
                app:layout_constraintStart_toEndOf="@id/favoriteItem"
                app:layout_constraintTop_toTopOf="@id/favoriteItem"
                tools:ignore="HardcodedText"
                tools:text="@string/addToFavorites" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/markChapters"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:text="@string/markAs"
                android:textColor="#ffffff"
                app:layout_constraintBottom_toBottomOf="@id/favoriteItem"
                app:layout_constraintEnd_toStartOf="@id/shareButton"
                app:layout_constraintTop_toTopOf="@id/favoriteItem"
                app:strokeColor="#ffffff"
                tools:ignore="HardcodedText" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/shareButton"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:textColor="#ffffff"
                app:icon="@android:drawable/ic_menu_share"
                app:iconTint="#ffffff"
                app:layout_constraintBottom_toBottomOf="@id/favoriteItem"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/favoriteItem"
                app:strokeColor="#ffffff"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/chapterListLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@id/moreInfo"
            android:layout_below="@id/optionsBar"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/moreInfo"
            app:layout_constraintTop_toBottomOf="@id/optionsBar">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/infoChapterList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/moreInfo"
                android:layout_below="@id/optionsBar"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_behavior="com.programmersbox.helpfulutils.views.OverScrollBehavior"
                app:layout_constraintBottom_toTopOf="@id/moreInfo"
                app:layout_constraintTop_toBottomOf="@id/optionsBar"
                tools:listitem="@layout/chapter_item" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/moreInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="@string/moreInfo"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:backgroundTint="@sample/sample_colors"
            tools:textColor="@sample/sample_colors" />

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>